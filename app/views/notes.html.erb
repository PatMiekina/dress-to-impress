

    <div class="wrapper">
      <div>
        <% if !@dress.photos.attached? %>
          <%= image_tag "https://lh3.googleusercontent.com/proxy/CBa4DlMNqLg_ULnczvpDntEhb0fw8rDdCqHYx9z_fZgFSipEE5603p-26kwHQCBHVM4v7s3Tj6lbH8K9G-x47C73zw", class:"d-block w-100"  %>

        <% elsif @dress.photos.size == 1 %>
          <img class="d-block dress-img w-100" src="<%= cl_image_path @dress.photos.first.key %>" alt="photo" >

        <% elsif @dress.photos.size > 1 %>
          <div id="carouselExampleIndicators" class="carousel slide">

            <!-- mine carousel -->
            <div class="carousel-indicators">
              <% @dress.photos.size.times do |i| %>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to=<%= i %> <%= class="active" if i == 1 %> aria-current="true" aria-label="Slide <%= i %>"></button>
              <% end %>
            </div>
            <!-- From gardens -->
            <ol class="carousel-indicators">
              <% @dress.photos.size.times do |i| %>
                <li data-target="#carouselExampleIndicators" data-slide-to="<%= i %>" class="<%= "active" if i.zero? %>"></li>
              <% end %>
            </ol>


            <div class="carousel-inner">
              <% @dress.photos.each_with_index do |photo, index| %>
                <div class="carousel-item <%= "active" if index.zero? %>">
                    <img class="d-block dress-img w-100" src="<%= cl_image_path photo.key %>" alt="<%= index.ordinalize %> image">
                </div>
              <% end %>
            </div>

              <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>

              <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
        <% end %>
      </div>
