<div class="container">
  <% if user_signed_in? %>
    <%= link_to "Add a dress", new_dress_path, class: "btn btn-main" %>
  <% end %>
  <div class="dresses">
    <% @dresses.each do |dress| %>
      <%= link_to dress_path(dress) do %>
        <div class="card-dress card">
          <% if dress.photos %>
              <%= cl_image_tag dress.photos.first.key, height: 800, width: 800, crop: :fill, class: "dress" %>
            <% else %>
              <p>No photo :(</p>
          <% end %>
          <div class="card-dress-infos">
            <div>
              <h2><%= dress.title %></h2>
              <p><%= dress.description %></p>
              <h2 class="card-dress-pricing"><%= dress.price %>Â£</h2>
            </div>
            <!-- next line breaks the code -->
            <!-- <%= link_to "Book", new_dress_booking_path(dress), class: "btn btn-main" %> -->
            <h2 class="btn btn-flat">Book</h2>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
